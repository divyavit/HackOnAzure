html(lang='en')
  head
    meta(name='google-signin-scope', content='profile email')
    meta(charset='UTF-8', name='google-signin-client_id', content='867205808355-mo7oa4a34h1fq7didpt1lom7bds5jv99.apps.googleusercontent.com')
    title LinedUp
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js' type="text/javascript")
    script(src='https://apis.google.com/js/platform.js', async='', defer='')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css')
    style
      include ../css/style.css
      include ../css/style_dropdown.css
    
  body
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js', async='', defer='')
    script. 
      if(1)
        console.log('yes')
    script(type="text/javascript")
      include ../scripts/script_dropdown.js
    link(href="https://fonts.googleapis.com/css?family=Schoolbell&v1" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Dancing Script" rel="stylesheet")
    link(href='https://fonts.googleapis.com/css2?family=Lato:wght@300&family=Montserrat:wght@600&display=swap', rel='stylesheet')
    h2.heading__name LinedUp
    .container
      .box
        input#toggle.box__toggle(type='checkbox', hidden='')
        img.box__image(src='https://source.unsplash.com/zv3ckJKftC4/300x400', alt='Picture by Autumn Studio')
        form.form.form--register(method='post', action='/register')
          h1.form__title Sign up
          .form__helper
            input#email.form__input(type='email', name='email', placeholder='Email')
            label.form__label(for='email') Email
          .form__helper
            input#new-user-password.form__input(type='password', name='password', placeholder='Password')
            label.form__label(for='new-user-password') Password
          .form__helper
            input#confirm-password.form__input(type='password', name='again_password', placeholder='Confirm password')
            label.form__label(for='confirm-password') Confirm password
          select(name='type').dropdown-el
            option(type='radio', value='Customer', checked='checked')
              label(for='sort-relevance') Customer
            option.user_type(type='radio', value='Owner')
              label(for='sort-best') Owner
          br
          br
          br
          button.form__button(type='submit') Register
          p.form__text
            | Already have an account? 
            label.form__link(for='toggle') Sign in!
        form.form.form--login(method='post', action='/login')
          h1.form__title Sign in
          .form__helper
            input#email.form__input(type='email', name='email', placeholder='email')
            label.form__label(for='email') Email
          .form__helper
            input#password.form__input(type='password', name='password', placeholder='Password')
            label.form__label(for='password') Password
          button.form__button(type='submit') Login
          p.form__text
            | Don't have an account? 
            label.form__link(for='toggle') Sign up!
    
    
    
