doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title CodePen - Responsive Search Form with Dropdown (Select) Menu
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,600', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css')
    link(href='https://fonts.googleapis.com/css?family=Dancing Script', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css2?family=Lato:wght@300&family=Montserrat:wght@600&display=swap', rel='stylesheet')
    style
      include ../css/timeslot.css
    
  body
    section.search-form
      h1.heading_style Choose your time slot 
      form(action='/booking/'+ owner_id + '/' + customer_id, method='POST', name='search', role='search')
        p.inp-wrap.search-wrap
        p.inp-wrap.cat-wrap
          label.grid-20(for='categories')
          select#categories.grid-80(name='search_categories')
            each item in list
              option(value=item, selected='')=item
        p.inp-wrap.submit-wrap
          button.grid-100.btn
            span.search-icon-container
